<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <style name="TextInputlayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="shapeAppearanceOverlay">@drawable/text_input_color</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/error</item>
    </style>
    <style name="HintTextAppearance">
        <item name="android:textColor">@color/g3</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/spoqahansansneo_regular</item>
    </style>
    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customTablayout">
        <item name="fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="AppTheme">
        <item name="colorControlNormal">@color/m1</item>
    </style>

    <style name="ThemeOverlay.AppCompat.TabLayout" parent="">
        <item name="tabRippleColor">@null</item>
    </style>
    
    <style name="t1">
        <item name="fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="t2">
        <item name="fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="t3">
        <item name="fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="b1_main">
        <item name="fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="b2_sub">
        <item name="fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="b3_small">
        <item name="fontFamily">@font/spoqahansansneo_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="b4_btn">
        <item name="fontFamily">@font/spoqahansansneo_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BottomSheetDialogRound" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_career_add</item>
    </style>







</resources>