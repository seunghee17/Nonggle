<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.view.farmer.notice.NoticeCompleteActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp" />
        <TextView
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content"
            android:text="@string/공고글"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/scrabBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/scrab"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_home_farmer"/>

                <LinearLayout
                    android:id="@+id/title_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_farmer_home_tipbox"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="180dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="20dp">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예시로 넣어놓는 제목"
                        android:fontFamily="@font/spoqahansansneo_medium"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="28dp" />
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/place"
                            android:backgroundTint="@color/g1"
                            android:layout_marginRight="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="충북 보령시"
                            android:textColor="@color/g2"
                            android:fontFamily="@font/spoqahansansneo_regular"
                            android:textSize="14sp"
                            android:layout_marginRight="12dp"/>
                        
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/g_line"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/date"
                            android:layout_marginRight="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="충북 보령시"
                            android:textColor="@color/g2"
                            android:fontFamily="@font/spoqahansansneo_regular"
                            android:textSize="14sp"
                            android:layout_marginRight="12dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="28dp"
                        android:background="@drawable/bg_farmer_home_tipbox"
                        android:backgroundTint="@color/g5"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:fontFamily="@font/spoqahansansneo_regular"
                                android:textColor="@color/g2"
                                android:text="@string/급여"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="급여협의"
                                android:fontFamily="@font/spoqahansansneo_medium"
                                android:textSize="14sp"
                                android:textColor="@color/m1"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:fontFamily="@font/spoqahansansneo_regular"
                                android:textColor="@color/g2"
                                android:text="@string/근무시간"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="12:00~18:00"
                                android:fontFamily="@font/spoqahansansneo_medium"
                                android:textSize="14sp"
                                android:textColor="@color/m1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:fontFamily="@font/spoqahansansneo_regular"
                                android:textColor="@color/g2"
                                android:text="@string/근무요일"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="주 6일"
                                android:fontFamily="@font/spoqahansansneo_medium"
                                android:textSize="14sp"
                                android:textColor="@color/m1"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/g5"
                    app:layout_constraintTop_toBottomOf="@id/title_box"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="36dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            건<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="@string/모집조건"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/급여"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="64dp"/>
                <TextView
                    android:id="@+id/pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="급여협의"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/모집마감"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/recruit_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상시모집"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/모집인원"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/recruit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3명"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/모집인원"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/recruit_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20대 ~ 70대"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/모집성별"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/recruit_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별무관"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/요구경력"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/recruit_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경력무관"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="36dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/필요자격증"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/recruit_qualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운전면허증"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="g_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:text="@string/근무내용"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/근무기간"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/work_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23.07.01~23.08.01"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/근무형태"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/work_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출퇴근형"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/근무요일"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/work_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월,화,수"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/근무시간"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00~18:00"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/재배품목"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/work_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과수"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/근무지역"
                    android:textColor="@color/g2"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:layout_marginRight="35dp"/>
                <TextView
                    android:id="@+id/work_place"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5sp"
                    android:text="강원도 춘천시 무학로"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/copy"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:src="@drawable/copy"
                        android:layout_marginRight="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqahansansneo_regular"
                        android:textSize="14sp"
                        android:text="복사"
                        android:textColor="@color/g2" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>
</layout>