                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mealtype"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
