<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.nongglenonggle.presentation.viewModel.worker.ResumeViewModel" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.worker.resume.ResumeDFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/complete"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-3sp"
                android:text="@string/희망_근무지역"
                android:textColor="@color/g1"
                android:textSize="14sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/select_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/noticeeditbox"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/희망하는_근무지역을"
                    android:textColor="@color/g3"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/place" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap">

                <LinearLayout
                    android:id="@+id/locationA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_certification"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/locationA_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/spoqahansansneo_regular"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:text="dnswjsdfsd"
                        android:textColor="@color/g2"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/locationA_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/xcircle" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locationB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_certification"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/locationB_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/spoqahansansneo_regular"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:text="sd"
                        android:textColor="@color/g2"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/locationB_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/xcircle" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locationC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_certification"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/locationC_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/spoqahansansneo_regular"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:text="d"
                        android:textColor="@color/g2"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/locationC_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/xcircle" />

                </LinearLayout>

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-3sp"
                android:text="@string/희망_품목"
                android:textColor="@color/g1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-3sp"
                android:text="@string/다중_선택이"
                android:textColor="@color/g2"
                android:textSize="14sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@{viewModel.categoryButtons[0] ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:onClick="@{() -> viewModel.onButtonClick(0, `식량작물`)}"
                    android:text="@string/식량작물"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@{viewModel.categoryButtons[0] ? @color/m1 : @color/g3}" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_weight="1"
                    android:background="@{viewModel.categoryButtons[1] ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:onClick="@{() -> viewModel.onButtonClick(1, `채소`)}"
                    android:text="@string/채소"
                    android:textColor="@{viewModel.categoryButtons[1] ? @color/m1 : @color/g3}" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:background="@{viewModel.categoryButtons[2] ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:onClick="@{() -> viewModel.onButtonClick(2, `과수`)}"
                    android:text="@string/과수"
                    android:textColor="@{viewModel.categoryButtons[2] ? @color/m1 : @color/g3}" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:background="@{viewModel.categoryButtons[3] ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:onClick="@{() -> viewModel.onButtonClick(3, `특용작물`)}"
                    android:text="@string/특용작물"
                    android:textColor="@{viewModel.categoryButtons[3] ? @color/m1 : @color/g3}" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:background="@{viewModel.categoryButtons[4] ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:onClick="@{() -> viewModel.onButtonClick(4, `화훼`)}"
                    android:text="@string/화훼"
                    android:textColor="@{viewModel.categoryButtons[4] ? @color/m1 : @color/g3}" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:background="@{viewModel.categoryButtons[5] ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:onClick="@{() -> viewModel.onButtonClick(5, `축산`)}"
                    android:text="@string/축산"
                    android:textColor="@{viewModel.categoryButtons[5] ? @color/m1 : @color/g3}" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_weight="1"
                    android:background="@{viewModel.categoryButtons[6] ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:onClick="@{() -> viewModel.onButtonClick(6, `농기계작업`)}"
                    android:text="@string/농기계작업"
                    android:textColor="@{viewModel.categoryButtons[6] ? @color/m1 : @color/g3}" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_weight="1"
                    android:background="@{viewModel.categoryButtons[7] ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:onClick="@{() -> viewModel.onButtonClick(7, `기타`)}"
                    android:text="@string/기타"
                    android:textColor="@{viewModel.categoryButtons[7] ? @color/m1 : @color/g3}" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/축산"
                    android:visibility="gone" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <EditText
                android:id="@+id/addtional_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@{viewModel.focusAdditional ? @color/m1 : @color/g_line}"
                android:layout_marginTop="12dp"
                android:paddingLeft="4dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textCursorDrawable="@color/m1"
                android:hint="@string/기타품목을_입력"
                android:textColorHint="@color/g3"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:visibility="gone"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-3sp"
                android:text="@string/희망_근무형태"
                android:textColor="@color/g1"
                android:textSize="14sp"
                android:layout_marginTop="32dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dormA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@{viewModel.clickDormA ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:text="@string/체류형"
                    android:textColor="@{viewModel.clickDormA ? @color/m1 : @color/g3}"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="16sp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dormB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@{viewModel.clickDormB ? @drawable/typebox_active : @drawable/typebox_unactive}"
                    android:text="@string/출퇴근형"
                    android:textColor="@{viewModel.clickDormB ? @color/m1 : @color/g3}"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textSize="16sp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-3sp"
                android:text="@string/희망_근무요일"
                android:textColor="@color/g1"
                android:textSize="14sp"
                android:layout_marginTop="32dp"/>
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@{viewModel.activedaySpinner ? @drawable/background_spinner_active : @drawable/background_spinner_unactive}"/>
            <EditText
                android:id="@+id/spinner_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@{viewModel.focusSpinnerEdit ? @color/m1 : @color/g_line}"
                android:hint="@string/월화_월수금"
                android:textColorHint="@color/g3"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textCursorDrawable="@color/m1"
                android:paddingLeft="4dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-3sp"
                android:text="@string/이력서_공개설정"
                android:textColor="@color/g1"
                android:textSize="14sp"
                android:layout_marginTop="32dp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="40dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/privateBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:text="@string/비공개"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@{viewModel.activeprivate ? @color/m1 : @color/g3}"
                    android:background="@{viewModel.activeprivate ? @drawable/typebox_active : @drawable/typebox_unactive}"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/publicBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/공개"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@{viewModel.activepublic ? @color/m1 : @color/g3}"
                    android:background="@{viewModel.activepublic ? @drawable/typebox_active : @drawable/typebox_unactive}"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/완료"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/m1"
        android:textColor="@color/white"
        android:fontFamily="@font/spoqahansansneo_medium"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>