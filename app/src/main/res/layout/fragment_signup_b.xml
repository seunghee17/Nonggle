<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.nongglenonggle.viewModel.farmer.signup.SignupBViewModel" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.farmer.signup.SignupBFragment"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nextBtn">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="회원가입"
        android:textSize="16sp"
        android:fontFamily="@font/spoqahansansneo_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="개인정보"
            android:fontFamily="@font/spoqahansansneo_regular"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/stepcircle"
            android:text="1"
            android:textSize="14sp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/stepcircleun"
            android:text="2"
            android:textSize="14sp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textColor="@color/m1"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/stepcircleun"
            android:text="3"
            android:textSize="14sp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textColor="@color/m1"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인이름"
        android:textColor="@color/g1"
        android:textSize="14sp"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:layout_marginBottom="4dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="본인의 이름을 입력해주세요"
                android:paddingLeft="16dp"
                android:paddingBottom="14dp"
                android:paddingTop="15dp"
                android:textColorHint="@color/g3"
                android:textSize="16sp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textCursorDrawable="@color/m1"
                android:backgroundTint="@color/g_line"
                />
        <ImageView
            android:id="@+id/clearbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xcirclesize"
            android:layout_gravity="right|center"
            android:layout_marginRight="16dp"
            android:visibility="invisible"
            />
    </FrameLayout>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="아이디"
    android:textColor="@color/g1"
    android:textSize="14sp"
    android:fontFamily="@font/spoqahansansneo_regular"
    android:layout_marginTop="20dp"
    />
    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/phnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전화번호를 입력해주세요"
            android:backgroundTint="@color/g_line"
            android:paddingBottom="14dp"
            android:paddingTop="15dp"
            android:textColorHint="@color/g3"
            android:textSize="16sp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textCursorDrawable="@color/m1"
            android:layout_weight="1"
            android:layout_toStartOf="@id/sendnum"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/clearbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xcirclesize"
            android:layout_marginRight="16dp"
            android:layout_alignBottom="@id/phnum"
            android:layout_toStartOf="@id/sendnum"
            android:layout_alignTop="@id/phnum"
            android:visibility="invisible"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendnum"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호"
            android:fontFamily="@font/spoqahansansneo_medium"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:background="@{viewModel.isinputComplete ? @drawable/button_active : @drawable/button_unactive}"
            />
    </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기호없이 번호만 입력해주세요."
                android:layout_marginTop="8dp"
                android:textColor="@color/error"
                android:textSize="12sp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:visibility="@{viewModel.ishypenError ? View.VISIBLE : View.GONE}"
                />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:textColor="@color/g1"
        android:textSize="14sp"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/verifyid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예) 1234"
            android:paddingLeft="16dp"
            android:paddingBottom="14dp"
            android:paddingTop="15dp"
            android:textColorHint="@color/g3"
            android:textSize="16sp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textCursorDrawable="@color/m1"
            android:layout_toStartOf="@id/confirmBtn"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:backgroundTint="@color/g_line"
            />
        <ImageView
            android:id="@+id/clearbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xcirclesize"
            android:layout_marginRight="16dp"
            android:layout_alignBottom="@id/verifyid"
            android:layout_toStartOf="@id/confirmBtn"
            android:layout_alignTop="@id/verifyid"
            android:visibility="invisible"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="확인"
            android:fontFamily="@font/spoqahansansneo_medium"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:background="@{viewModel.isverifyend ? @drawable/button_active : @drawable/button_unactive}"
            />
    </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호가 맞지 않습니다."
                android:layout_marginTop="8dp"
                android:textColor="@color/error"
                android:textSize="12sp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:visibility="@{viewModel.authcomplete ? View.GONE : View.VISIBLE}"
                />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@color/g1"
        android:textSize="14sp"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="20dp"
        />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            >

            <EditText
                android:id="@+id/passwordbox1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/g_line"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:hint="비밀번호를 입력해주세요"
                android:paddingLeft="16dp"
                android:paddingTop="15dp"
                android:paddingBottom="14dp"
                android:textColorHint="@color/g3"
                android:textCursorDrawable="@color/m1"
                android:inputType="textPassword"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/clearbtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xcirclesize"
                android:layout_gravity="right|center"
                android:layout_marginRight="16dp"
                android:visibility="invisible"
                />
        </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8~20자의 영문자,숫자만 사용 가능합니다."
                android:textColor="@color/error"
                android:textSize="12sp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:layout_marginTop="8dp"
                android:visibility="@{viewModel.ispasswordavail ? View.INVISIBLE : View.VISIBLE}"
                />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textColor="@color/g1"
        android:textSize="14sp"
        android:fontFamily="@font/spoqahansansneo_regular"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="20dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/passwordbox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 한번 더 입력해주세요"
            android:paddingLeft="16dp"
            android:paddingBottom="14dp"
            android:paddingTop="15dp"
            android:textColorHint="@color/g3"
            android:textSize="16sp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textCursorDrawable="@color/m1"
            android:inputType="textPassword"
            android:backgroundTint="@color/g_line"
            />
        <ImageView
            android:id="@+id/clearbtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xcirclesize"
            android:layout_gravity="right|center"
            android:layout_marginRight="16dp"
            android:visibility="invisible"
            />

    </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호가 일치하지 않습니다."
                android:textColor="@color/error"
                android:textSize="12sp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="75dp"
                android:visibility="@{viewModel.ispasswordsame ? View.INVISIBLE : View.VISIBLE}"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="다음"
        android:paddingTop="14dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/unactive"
        android:textColor="@color/white"
        android:fontFamily="@font/spoqahansansneo_medium"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>