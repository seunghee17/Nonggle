<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.farmer.notice.noticeCFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.nongglenonggle.viewModel.farmer.notice.FarmerNoticeViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nextBtn"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/q1title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="14sp"
                    android:textColor="@color/g1"
                    android:text="@string/필요인원"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <EditText
                    android:id="@+id/q1edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/q1title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/g_line"
                    android:hint="@string/필요인원설명"
                    android:textColorHint="@color/g3"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="16sp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    />

                <TextView
                    android:id="@+id/agetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/q1edit_txt"
                    android:layout_marginTop="24dp"
                    android:text="@string/연령대"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="14sp"
                    android:textColor="@color/g1"
                    />

                <LinearLayout
                    android:id="@+id/age_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/agetitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:weightSum="2"
                    >
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="16dp"
                        android:layout_marginRight="16dp"
                        />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="16dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/gender_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/age_select"
                    android:layout_marginTop="24dp"
                    android:text="@string/성별"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="14sp"
                    android:textColor="@color/g1"/>

                <LinearLayout
                    android:id="@+id/gender_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/gender_select"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="12dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                       android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/여"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/남"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/성별무관"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/paytitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gender_container"
                    android:layout_marginTop="24dp"
                    android:text="@string/급여"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="14sp"
                    android:textColor="@color/g1"
                    />
                <TextView
                    android:id="@+id/pay_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/paytitle"
                    android:layout_marginTop="8dp"
                    android:text="@string/급여sub"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="14sp"
                    android:textColor="@color/g3"
                    />

                <LinearLayout
                    android:id="@+id/pay_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/pay_subtitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="12dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/일급"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/시급"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/급여협의"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/job_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pay_container"
                    android:layout_marginTop="24dp"
                    android:text="@string/고용형태"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="14sp"
                    android:textColor="@color/g1"
                    />

                <LinearLayout
                    android:id="@+id/job_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/job_type"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="12dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/체류형"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/출퇴근형"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/계약직"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/avil_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/job_container"
                    android:layout_marginTop="24dp"
                    android:text="@string/고용형태"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="14sp"
                    android:textColor="@color/g1"
                    />

                <LinearLayout
                    android:id="@+id/avail_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/avil_career"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="12dp"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/비경험자"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/경험자"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/경력무관"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/certification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/avail_container"
                    android:layout_marginTop="24dp"
                    android:text="@string/자격증"
                    android:fontFamily="@font/spoqahansansneo_regular"
                    android:textSize="14sp"
                    android:textColor="@color/g1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/certification"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="64dp"
                    android:layout_marginTop="12dp"
                    android:weightSum="2"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/필요있음"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/typebox_unactive"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/필요없음"
                            android:textColor="@color/g3"
                            android:textSize="16sp"
                            android:fontFamily="@font/spoqahansansneo_medium"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            />
                    </LinearLayout>

                </LinearLayout>







            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="다음"
        android:paddingTop="14dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/unactive"
        android:textColor="@color/white"
        android:fontFamily="@font/spoqahansansneo_medium"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>