<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.worker.mypage.WorkerEvaluateFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_left"
            app:tint = "@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/농가평가하기"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            style="@style/b1_main"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/구직자님_님은_어떠셨나요"
        android:fontFamily="@font/spoqahansansneo_medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="5sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_radius4_stroke">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/img_offer_circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정경자 일손"
            android:textSize="14sp"
            android:fontFamily="@font/spoqahansansneo_medium"
            android:textColor="@color/black"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="29dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|  여 ∙ 65세"
            android:textColor="@color/g1"
            style="@style/b3_small"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/g5"
        android:layout_marginTop="24dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/spoqahansansneo_medium"
        android:textColor="@color/g2"
        android:textSize="14sp"
        android:text="@string/인격모독"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/폭언등_문제되는_행동은_없었나요"
        android:layout_gravity="center"
        android:textColor="@color/black"
        style="@style/b1_main"/>
    
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumb="@drawable/num3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="51dp"
        android:progress="3"
        android:max="5"
        android:progressDrawable="@drawable/seekbar_bg"/>


</LinearLayout>
</layout>