<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Layer -->
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/darker_gray"/> <!-- Shadow color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Your Actual Background Layer -->
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp"/>
            <stroke android:width="1dp"
                android:color="@color/g_line_light"/>
        </shape>
    </item>
</layer-list>