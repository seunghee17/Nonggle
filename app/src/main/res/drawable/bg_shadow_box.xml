<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Layer -->
    <item android:top="4dp"> <!-- y=4dp -->
        <shape android:shape="rectangle">
            <solid android:color="#B3D4D4D4"/> <!-- Semi-transparent shadow color -->
            <corners android:radius="24dp"/> <!-- 20dp blur + 4dp corner -->
        </shape>
    </item>

    <!-- Your Actual Background Layer -->
    <item android:top="4dp" android:right="4dp" android:left="4dp" android:bottom="4dp">
        <shape android:shape="rectangle"><!-- or any other color you want -->
            <corners android:radius="4dp"/>
            <stroke android:width="1dp" android:color="@color/g_line_light"/>
        </shape>
    </item>
</layer-list>